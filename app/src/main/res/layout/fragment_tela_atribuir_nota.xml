<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#252525"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_tela_atribuir_nota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_content_notas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="350px"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingHorizontal="34dp">

                    <TextView
                        android:id="@+id/txt_jogo_atribuir_nota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="Counter Strike 2"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/bar_titlte_atribuir_nota"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/black"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/block_layout_elementos_notas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/ic_launcher_layout_atribuir_nota"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingVertical="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50px"
                            android:layout_marginRight="50px"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_atribuir_nota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Atribuir Nota"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:id="@+id/bar_atribuir_nota"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/black"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="vertical"></LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_notas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="40dp"
                            android:layout_marginBottom="53dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbtn_nota_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/rbtn_nota_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/rbtn_nota_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/rbtn_nota_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="4"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/rbtn_nota_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="5"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_editar_nota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="11dp"
                            android:background="@drawable/ic_launcher_btn_atribuir_nota"
                            android:text="Editar Nota" />

                        <Button
                            android:id="@+id/btn_atribuir_nota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="11dp"
                            android:background="@drawable/ic_launcher_btn_atribuir_nota"
                            android:text="Atribuir Nota" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_nota_jogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="Nota do Jogo"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/bar_nota_jogo"
                        android:layout_width="223dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/black"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_content_media"
                        android:layout_width="223dp"
                        android:layout_height="107dp"
                        android:background="@drawable/ic_launcher_layout_atribuir_nota"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:paddingLeft="31dp"
                        android:paddingRight="17dp">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/layout_minha_nota"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_minha_nota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="21dp"
                                android:text="Sua nota"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txt_num_minha_nota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:text="4"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/separate_notas"
                            android:layout_width="1dp"
                            android:layout_height="86dp"
                            android:background="@color/black"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical"></LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/layout_content_media_total"
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_nota_geral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="28dp"
                                android:text="Nota Geral"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txt_num_nota_geral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="26dp"
                                android:text="4,3"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>