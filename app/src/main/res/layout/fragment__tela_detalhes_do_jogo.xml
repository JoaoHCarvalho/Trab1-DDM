<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_layout_tela_detalhes_jogo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#252525">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_global_detalhes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_jogo_detalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="33dp"
                        android:layout_marginBottom="2dp"
                        android:text="Metal Gear Solid V: GZ  "
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@+id/bar_detalhe_jogo_title"
                        android:layout_width="261dp"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="27dp"
                        android:layout_marginBottom="23dp"
                        android:background="#000000"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/layout_img_detalhe_jogo"
                        android:layout_width="match_parent"
                        android:layout_height="206dp"
                        android:layout_marginHorizontal="11dp"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/ic_launcher_imgdetalhejogo"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_conquistas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="11dp"
                        android:layout_marginBottom="22dp"
                        android:background="@drawable/ic_launcher_detalhe_conquistas"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="17dp"
                        android:paddingBottom="6dp">

                        <TextView
                            android:id="@+id/conquistas_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Conquistas"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/layout_organize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_conq_adquiridas"
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="19dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/bar_conquistas"
                                    android:layout_width="80dp"
                                    android:layout_height="2dp"
                                    android:layout_marginBottom="32dp"
                                    android:background="#000000"
                                    android:orientation="vertical"></LinearLayout>

                                <TextView
                                    android:id="@+id/txt_adquiridas"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="15\nAdquiridas"
                                    android:textColor="#FFFFFF"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img_porc_concluido"
                                android:layout_width="92dp"
                                android:layout_height="109dp"
                                android:layout_marginEnd="12dp"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/txt_disponivel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_weight="1"
                                android:text="1\nDisponÃ­vel"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_adicionar_fav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="23dp"
                        android:layout_marginBottom="26dp"
                        android:background="@drawable/ic_layout_btn_arredondado"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:text="Adicionar aos favoritos"
                        android:textColorLink="#000000" />

                    <Button
                        android:id="@+id/button_atribuir_nota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="23dp"
                        android:layout_marginBottom="26dp"
                        android:background="@drawable/ic_layout_btn_arredondado"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingVertical="20dp"
                        android:text="Atribuir Nota"
                        android:textColorLink="#000000" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>